{
    "compilerOptions": {
        "target": "es5",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "es2016.array.include",
            "dom"
        ],
        "sourceMap": true,
        "module": "system",
        "outFile": "build/main.js"
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*_as.ts"
    ]
}
